def calculate_heading(show_chapters,i)
	if (i.csys.is_chapter?) then
		classdiv = "cSysParentIssue"
		chapstr = ""
		if show_chapters
			chapstr = i.chapter_str
		end
	else
		classdiv = "cSysIssue"
		chapstr = ""
		if show_chapters
			chapstr += i.chapter_str + " "
		end		
		chapstr += i.csys.get_identifier
	end
	if show_chapters
		chapstr += ':'
	end
	return chapstr,classdiv
end

